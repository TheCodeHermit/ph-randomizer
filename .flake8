[flake8]
max-line-length = 100
show-source = True
exclude =
    .git,
    __pycache__,
    .tox,
    .eggs,
    *.egg,
ignore =
    # Closing bracket does not match indentation of opening bracketâ€™s line
    E123
    # Whitespace before ':'
    E203,
    # Line break before binary operator
    W503,
    # Blank line contains whitespace
    W293,
