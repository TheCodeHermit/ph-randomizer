{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "every weekend"
  ],
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPaths": [
        "+(.pre-commit-config.yaml)"
      ],
      "automerge": true
    }
  ]
}
